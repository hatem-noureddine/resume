{
    "ci": {
        "collect": {
            "startServerCommand": "npm run start -- -p 3001",
            "url": [
                "http://localhost:3001/"
            ],
            "numberOfRuns": 3,
            "settings": {
                "preset": "desktop"
            }
        },
        "assert": {
            "assertions": {
                "categories:performance": [
                    "warn",
                    {
                        "minScore": 0.6
                    }
                ],
                "categories:accessibility": [
                    "error",
                    {
                        "minScore": 0.8
                    }
                ],
                "categories:best-practices": [
                    "warn",
                    {
                        "minScore": 0.85
                    }
                ],
                "categories:seo": [
                    "warn",
                    {
                        "minScore": 0.85
                    }
                ],
                "first-contentful-paint": [
                    "warn",
                    {
                        "maxNumericValue": 3000
                    }
                ],
                "largest-contentful-paint": [
                    "warn",
                    {
                        "maxNumericValue": 4000
                    }
                ],
                "cumulative-layout-shift": [
                    "warn",
                    {
                        "maxNumericValue": 0.25
                    }
                ],
                "unused-javascript": [
                    "off",
                    {}
                ],
                "valid-source-maps": [
                    "error",
                    {
                        "minScore": 1
                    }
                ],
                "total-byte-weight": [
                    "off",
                    {}
                ],
                "uses-responsive-images": [
                    "off",
                    {}
                ]
            }
        },
        "upload": {
            "target": "temporary-public-storage"
        }
    }
}