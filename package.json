    "prismjs": "^1.30.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "reading-time": "^1.5.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
