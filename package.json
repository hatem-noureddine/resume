{
  "name": "hatem-noureddine-portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio website - Hatem Noureddine",
  "author": "Hatem Noureddine",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "analyze": "cross-env ANALYZE=true next build --webpack",
    "lh": "lhci autorun",
    "clean": "rm -rf .next out final_out coverage reports playwright-report .lighthouseci test-results",
    "prepare:static": "rm -rf final_out && mkdir -p final_out/resume && cp -r out/* final_out/resume",
    "health-check": "node scripts/check-links.mjs",
    "generate-report": "node scripts/generate-report.mjs",
    "verify": "npm run clean && npm run lint && npm run test:coverage && npm run build && npm run prepare:static && npm run test:e2e && npm run lh",
    "verify:quick": "npm run lint && npm run test && npm run build",
    "verify:ci": "npm run lint && npm run test:coverage && npm run build"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.26",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.561.0",
    "next": "16.0.10",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^16.0.10",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.0.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-json-reporter": "^1.2.2",
    "jest-junit": "^16.0.0",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
