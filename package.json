{
  "name": "hatem-noureddine-portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio website - Hatem Noureddine",
  "author": "Hatem Noureddine",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "analyze": "cross-env ANALYZE=true next build --webpack",
    "lh": "lhci autorun",
    "clean": "rm -rf .next out final_out coverage reports playwright-report .lighthouseci test-results",
    "prepare:static:legacy": "rm -rf final_out && mkdir -p final_out/resume && cp -r out/* final_out/resume",
    "health-check": "node scripts/check-links.mjs",
    "generate-report": "node scripts/generate-report.mjs",
    "verify": "npm run clean && npm run lint && npm run test:coverage && npm run build && npm run test:e2e && npm run lh",
    "verify:quick": "npm run lint && npm run test && npm run build",
    "verify:ci": "npm run lint && npm run test:coverage && npm run build",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@formspree/react": "^3.0.0",
